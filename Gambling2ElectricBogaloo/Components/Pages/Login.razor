@page "/login"
@layout MinimalLayout


@* @inject Gambling2ElectricBogaloo.Components.Classes.Database Database
@using Gambling2ElectricBogaloo.Components.Classes *@




<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="css/loginstyle.css" rel="stylesheet" />
    <title>Modern Login Page | AsmrProg</title>
</head>

<body>

    <div class="container" id="container">
        <div class="form-container sign-up">
            <form>
                <h1>Create Account</h1>
                <input type="text" placeholder="Username" @bind="registerUsername">
                <input type="password" placeholder="Password" @bind="registerPassword">
                <button @onclick="Register">Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form>
                <h1>Sign In</h1>
                <input type="text" placeholder="Username" @bind="loginUsername">
                <input type="password" placeholder="Password" @bind="loginPassword">
                <button @onclick="SignIn">Sign In</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of the site features</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, Friend!</h1>
                    <p>Register with your personal details to use all of the site features</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('container');
        const registerBtn = document.getElementById('register');
        const loginBtn = document.getElementById('login');

        registerBtn.addEventListener('click', () => {
            container.classList.add("active");
        });

        loginBtn.addEventListener('click', () => {
            container.classList.remove("active");
        });
    </script>

    @code {
        private string errorMessage;

        private string registerUsername;
        private string registerPassword;
        private string loginUsername;
        private string loginPassword;

        private void Register()
        {
            // Implement registration logic using registerName, registerEmail, and registerPassword
            // You can use these variables to pass user input to your registration logic
            // Example: Call a service to perform user registration
        }

        private void SignIn()
        {
            // Implement sign-in logic using loginEmail and loginPassword
            // You can use these variables to pass user input to your sign-in logic
            // Example: Call a service to perform user sign-in
        }


    }


    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="error">@errorMessage</p>
    }
</body>

</html>
